<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenSplash"
    android:background="@color/green">

    <ImageView
        android:id="@+id/splash_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:background="@drawable/frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/splash_button"
        android:layout_width="147dp"
        android:layout_height="61dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/dark_green"
        android:text="@string/splash_go"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/splash_frame"
        app:layout_constraintStart_toStartOf="@+id/splash_frame"
        app:layout_constraintTop_toBottomOf="@+id/splash_frame" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/brought_to_you_by_box"
        app:layout_constraintEnd_toEndOf="@+id/splash_button"
        app:layout_constraintStart_toStartOf="@+id/splash_button"
        app:layout_constraintTop_toBottomOf="@+id/splash_button" />

</androidx.constraintlayout.widget.ConstraintLayout>